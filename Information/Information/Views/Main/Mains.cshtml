    @*样式*@

 
   
 
    <style type="text/css">
        #line-chart {
            height: 300px;
            width: 800px;
            margin: 0px auto;
            margin-top: 1em;
        }

        .brand {
            font-family: georgia, serif;
        }

            .brand .first {
                color: #ccc;
                font-style: italic;
            }

            .brand .second {
                color: #fff;
                font-weight: bold;
            }

        a {
            color: black;
        }
    </style>

    <script type="text/javascript">
            //$("[rel=tooltip]").tooltip();
        $(function () {

            $('.nav').hide();
            $('.nav-header').click(function () {
                $(this).next(".nav").toggle(300);
            });


            });
    </script>

  
    @*操作*@
    <script type="text/javascript">
    $(function () {
        $('#accounts-menu').tree({
            url: '/Main/MainsTree',
            onClick: function (node) {
                console.info(node);
                var text = node.text;
                var address = node.ProAddress;

                if (address != null) {
                    //如果页面有就选中，否则就添加
                    if ($("#tabs").tabs('exists', text)) {
                        $("#tabs").tabs('select', text)
                    } else {
                        $('#tabs').tabs('add', {
                            title: text,
                            content: '<iframe src="' + address + '" width="99%" height="800px" />',
                            closable: true,
                            tools: [{
                                iconCls: 'icon-mini-refresh',
                                handler: function () {
                                    alert('refresh');
                                }
                            }]
                        });
                   }


                }
            }

        });
    });
    </script>
</head>

<body class="easyui-layout">
    <div data-options="region:'north',split:true" style="height:50px;"  scrolling="NO">
        <iframe src="top" name="top" width="99%" height="65px" scrolling="No"></iframe>
    </div>
  
        <div data-options="region:'west',split:true" style="width:180px;">

            <ul  id="accounts-menu"></ul>@*id="tt" *@
        </div>

        <div data-options="region:'center'" style="padding:5px;background:#eee;">
                <div id="tabs" class="easyui-tabs" style="width:1080px;height:450px;">  </div>


    </div>



