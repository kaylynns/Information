    @*操作*@
    <script type="text/javascript">
    $(function () {
        $('#accounts-menu').tree({
            url: '/Main/MainsTree',
             
            onClick: function (node) {
                console.info(node);
                var text = node.text;
                var address = node.ProAddress;

                if (address != null) {
                    //如果页面有就选中，否则就添加
                    if ($("#tabs").tabs('exists', text)) {
                        $("#tabs").tabs('select', text)
                    } else {
                        $('#tabs').tabs('add', {
                            title: text,
                            content: '<iframe src="' + address + '" width="1163" height="540px" />',
                            closable: true,
                            tools: [{
                                iconCls: 'icon-mini-refresh',
                                handler: function () {
                                    alert('refresh');
                                }
                            }]
                        });
                   }


                }
            }


           
             
          
        });
    });
