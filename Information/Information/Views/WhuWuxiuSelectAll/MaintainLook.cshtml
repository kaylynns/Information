@model Entity.info_Maintenance

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MaintainLook</title>

    <link href="~/css/css.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style type="text/css">
        .t1 {
            clear: both;
            border: 1px solid #c9dae4;
            margin-top: 10px;
        }

            .t1 tr th {
                color: #0d487b;
                /*background: #f2f4f8 url(../CSS/Table/images/sj_title_pp.jpg) repeat-x left bottom;*/
                line-height: 28px;
                border-bottom: 1px solid #9cb6cf;
                border-top: 1px solid #e9edf3;
                font-weight: normal;
                text-shadow: #e6ecf3 1px 1px 0px;
                padding-left: 5px;
                padding-right: 5px;
            }

            .t1 tr td {
                border-bottom: 1px solid #e9e9e9;
                padding-bottom: 5px;
                padding-top: 5px;
                color: #444;
                border-top: 1px solid #DDDDDD;
                padding-left: 5px;
                padding-right: 5px;
                word-break: break-all;
            }

        tr.over td {
            background: #bcd4ec; /*这个将是鼠标高亮行的背景色*/
        }

        #ListArea tr:first-child {
            background: linear-gradient(#F8F8F8,#DEDEDE);
            font-weight: 800;
            font-size: 15px;
        }

        .t1 tr {
            background-color: white;
            text-align: center;
            font-size: 15px;
        }

        .aa input {
            background-color: transparent;
            border: none;
        }
            #jcT input {
              text-align:center;
             }
    </style>
    <script type="text/javascript">
        $(function () {

            $.ajax({
                url: "/WhuWuxiuSelectAll/selectJC",
                type: "post",
                success: function (msg) {
                    var datas = eval("(" + msg + ")");
                    $("#jcT tr:gt(0)").remove();
                    for (var i = 0; i < datas.length; i++) {
                        var $tr = $('<tr class="aa" align="center"></tr>');
                        var $td = $('<td>  <input id="pro" type="text" Width="240" value=' + datas[i]["project"] + '></td>');
                        var $td2 = $('<td>  <input id="res" type="text" Width="240" value=' + datas[i]["result"] + '></td>');

                        $tr.append($td, $td2);
                        $("#jcT").append($tr);
                    }
                }
            })
        })

    </script>
</head>
<body>
    <h2  align="center" style="font-size:25px;font-weight:bold">设备维护查询</h2>
    <table cellspacing="0" cellpadding="7" align="center" border="1" style="border-collapse: collapse; margin-bottom:20px"
           bordercolor="#6c9ec1">
        <tr class="wh">
            <td>日期：</td>
            <td>@Html.EditorFor(model => model.MaintenanceTime, new { @readonly = "readonly" })</td>
        </tr>
        <tr class="wh">
            <td>维护设备名称：</td>
            <td>@Html.EditorFor(model => model.MDeviceName, new { @readonly = "readonly" })</td>
        </tr>
        <tr class="wh">
            <td>负责检测单位：</td>
            <td>@Html.EditorFor(model => model.MDetectionUnit, new { @readonly = "readonly" })</td>
        </tr>
        <tr class="wh">
            <td>检测人员：</td>
            <td>@Html.EditorFor(model => model.MTestingPersonnel, new { @readonly = "readonly" })</td>
        </tr>
        <tr class="wh">
            <td>陪同人员：</td>
            <td>@Html.EditorFor(model => model.MAccompanyingOfficials, new { @readonly = "readonly" })</td>
        </tr>
        <tr></tr>
        <tr>
            <td colspan="2">
                <table width="100%" id="jcT" border="0" class="t1" align="center" cellpadding="0"
                       cellspacing="0">

                    <tr id="head">
                        <td>检测项目</td>
                        <td>检测结果</td>
                    </tr>

                </table>
            </td>
        </tr>
        <tr>
            <td colspan="2"></td>
        </tr>
        <tr class="wh">
            <td>相关意见：</td>
            <td>@Html.EditorFor(model => model.Madvice, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <input id="btn_QX" type="button" value="返回" class="btn1" style="margin-left:30px" onclick="window.location.href = '/WhuWuxiuSelectAll/MaintainSelect'" />
            </td>
        </tr>
    </table>
</body>
</html>
