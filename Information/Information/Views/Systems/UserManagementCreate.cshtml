@model Entity.info_User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserManagementCreate</title>
</head>
<body>
    @using (Html.BeginForm("UserManagementCreates", "Systems","post"))
    {
        <div class="form-horizontal">
            <h2 align="center">用户添加</h2>
            <hr />
          
            <div class="form-group">
                @Html.Label("登陆名：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
    
    
            <div class="form-group">
                @Html.Label("真实姓名：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserRealName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserRealName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("密码：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserPass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("电话：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserPhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserPhone, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("公用电话：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UseroffcePhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UseroffcePhone, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("所属处室：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserKeShi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserKeShi, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("角色：")
                <div class="col-md-10">
                    @Html.DropDownListFor(e => e.UserJueSe, ViewData["role"] as IEnumerable<SelectListItem>)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="添加用户" class="btn btn-default" />
                    <input type="button" value="返回" id="btn_select" Class="btn1" style="margin-left:10px" onclick="window.location.href = '/Systems/UserManagementSelect'" />
                </div>
            </div>
        </div>
    }
    
  
</body>
</html>
