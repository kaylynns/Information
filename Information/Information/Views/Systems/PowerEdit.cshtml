@model Entity.info_Role

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PowerEdit</title>
</head>
<body>
    @using (Html.BeginForm("PowerEdits", "Systems", "post"))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h2 align="center">角色更改</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
             
            @Html.HiddenFor(model => model.RoleID)
              
            </div>
    
            <div class="form-group">
                @Html.Label("角色名称：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("角色备注：")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="更改"  Class="btn1" style="margin-left:10px" />
                    <input type="button" value="返回"  Class="btn1" style="margin-left:10px" OnClick="window.location.href = '/Systems/PowerSelect'" />
                </div>
            </div>
        </div>
    }
    
 
</body>
</html>
