@model Entity.info_Role

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PowerEdit</title>
    <link href="~/css/css.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <style>
       .jz  td{
            text-align:center;
        }

    </style>
</head>
<body>
    <h2 align="center">角色更改</h2>
    @using (Html.BeginForm("PowerEdits", "Systems", "post"))
            {
        <table cellspacing="0" cellpadding="8" align="center" border="1" style="border-collapse: collapse;"
               bordercolor="#6c9ec1" width="400px" height="200px"> 
       
            <tr>
                <td>@Html.Label("角色id:")</td>
                <td>@Html.TextBoxFor(model => model.RoleID, new { @readonly = "readonly" })</td>
            </tr>
            <tr>
                <td>@Html.Label("角色名称:")</td>
                <td> @Html.TextBoxFor(model => model.RoleName)</td>
            </tr>
            <tr>
                <td>@Html.Label("角色备注:")</td>
                <td>@Html.EditorFor(model => model.Remark)</td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="保存" id="btn_select" Class="btn1" style="margin-left:10px" />
                    <input type="button" value="返回" id="btn_select" Class="btn1" style="margin-left:10px" onclick="window.location.href = '/Systems/PowerSelect'" data-dismiss="modal" />
                </td>
            </tr>
        </table>
    }

  
    
 
</body>
</html>
