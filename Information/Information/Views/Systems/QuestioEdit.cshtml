@model Entity.info_Question

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>问题分类修改</title>
    <link href="~/css/css.css" rel="stylesheet" />
</head>
<body>
    <h2 align="center">问题分类修改</h2>
    @using (Html.BeginForm("QuestioEdit", "Systems", "post"))
    {
        <table cellspacing="0" cellpadding="8" align="center" border="1" style="border-collapse: collapse;"
               bordercolor="#6c9ec1" width="300px" height="200px" class="jz">
            <tr>
                <td>问题分类名称</td>
                <td>
                    @Html.HiddenFor(model => model.QID)
                    @Html.EditorFor(model => model.QName)
                </td>
            </tr>
            <tr>
                <td>问题分类备注</td>
                <td>@Html.EditorFor(model => model.QRemark)</td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="更改" Class="btn1" style="margin-left:10px" />
                    <input type="button" value="返回" Class="btn1" style="margin-left:10px" OnClick="window.location.href = '/Systems/QuestionSelect'" />
                </td>

            </tr>

        </table>

    }
</body>
</html>
