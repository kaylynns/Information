   @model Entity.info_ComputerRoomVisit
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DaiShenHe</title>
    <link href="~/css/css.css" rel="stylesheet" />
    <style type="text/css">
        input {
            outline: none;
            background: transparent;
            border: none;
            outline: medium;
        }
        </style>
</head>
<body>
    <form method="post">
        <table cellspacing="0" cellpadding="8" align="left" border="1" style="border-collapse: collapse"
               bordercolor="#6c9ec1">
            <tr>
                <td align="left" style="height: 30px">
                    登记人：
                </td>
                <td align="left">
                    @ViewData["DengJiren"]
                </td>
                <td align="left">
                    @Html.HiddenFor(model => model.CID, htmlAttributes: new { @class = "control-label col-md-2" })
                    &nbsp;
                </td>
                <td align="left">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td style="height: 30px" align="left">
                    来访日期：
                </td>
                <td align="left" class="JiFang">
                    @Html.TextBoxFor(model => model.CTIme, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td align="left">
                    来访人员：
                </td>
                <td align="left">
                    @Html.TextBoxFor(model => model.CName)
                </td>
            </tr>
            <tr>
                <td align="left">
                    来访事由：
                </td>
                <td align="left" colspan="3">
                    @Html.EditorFor(model => model.Cause, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td align="left" class="style1">
                    携带物品：
                </td>
                <td align="left" class="style1">
                    @Html.EditorFor(model => model.Carries, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td align="left" class="style1">
                    陪同人员：
                </td>
                <td align="left" class="style1">
                   @ViewData["LaiFang"]
                    @Html.HiddenFor(model => model.CEntourage)
                </td>
            </tr>
            <tr id="tr_sh">
                <td style="height: 20px">
                    审核
                </td>
                <td align="left" colspan="3" style="padding-right: 0px; padding-left: 0px; padding-bottom: 0px;
                                                        margin: 0px; padding-top: 0px" valign="middle">
                    <table align="center" cellpadding="3" cellspacing="0" width="100%">
                        <tr height="22" class="JiaCu">
                            <td align="left">
                               @Html.RadioButtonFor(Model=>Model.CXuanXiang,"1", new { @checked= "checked" })同意
                                @Html.RadioButtonFor(Model => Model.CXuanXiang, "2")不同意
                            </td>
                        </tr>
                        <tr style="border-top:1px; border-top-color:#6c9ec1; border-bottom:0px; border-left:0px; border-right:0px; border-style:solid">
                            <td align="left" height="22">
                                审核意见：
                                @Html.TextAreaFor(Model=>Model.COpinion)
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td align="center" colspan="4" width="26">
                    <input id="btn_Bao" type="submit" value="提交" class="btn1" />
                    <input id="btn_add" type="button" value="返回" class="btn1" />
                </td>
            </tr>
            <tr></tr>
        </table>
    </form>
</body>
</html>
