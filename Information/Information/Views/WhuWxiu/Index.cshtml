
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/css.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.2.min.js"></script>
    <style type="text/css">
        .t1 {
            clear: both;
            border: 1px solid #c9dae4;
            margin-top: 10px;
        }

            .t1 tr th {
                color: #0d487b;
                /*background: #f2f4f8 url(../CSS/Table/images/sj_title_pp.jpg) repeat-x left bottom;*/
                line-height: 28px;
                border-bottom: 1px solid #9cb6cf;
                border-top: 1px solid #e9edf3;
                font-weight: normal;
                text-shadow: #e6ecf3 1px 1px 0px;
                padding-left: 5px;
                padding-right: 5px;
            }

            .t1 tr td {
                border-bottom: 1px solid #e9e9e9;
                padding-bottom: 5px;
                padding-top: 5px;
                color: #444;
                border-top: 1px solid #DDDDDD;
                padding-left: 5px;
                padding-right: 5px;
                word-break: break-all;
            }

        tr.over td {
            background: #bcd4ec; /*这个将是鼠标高亮行的背景色*/
        }

        #ListArea tr:first-child {
            background: linear-gradient(#F8F8F8,#DEDEDE);
            font-weight: 800;
            font-size: 15px;
        }

        .t1 tr {
            background-color: white;
            text-align: center;
            font-size: 15px;
        }
        #wh a {
           color:royalblue;
        }
    </style>

    <script type="text/javascript">
        $(function () {
            //添加
            $("#btn_add").click(function () {
                window.location.href = "/WhuWxiu/Create";
            })
            //清除
            $("#btn_clear").click(function () {
                $("#names").val("");
            })

            var currentPage = 1;//当前页
            var pages = 1;//总页数
            show();//加载
            var names;


            function show() {
                $.ajax({
                    url: "/WhuWxiu/Index2",
                    type: "post",
                    data: "currentpage=" + currentPage,
                    success: function (msg) {

                        var dts = eval("(" + msg + ")");
                        var dt = dts["dt"];
                        fileTable(dt);
                        var rows = dts["rows"];
                        pages = dts["pages"];
                        $("#leftPage").html("共有" + rows + "条记录，当前第" + currentPage + "/" + pages + "页");
                    }
                })

            }//加载全部
            function fileTable(dt) {
                $("#ListArea tr:gt(0)").remove();//清空表格
                for (var i = 0; i < dt.length; i++) {
                    var $tr = $("<tr></tr>");
                    var $td1 = $("<td id='aa'>" + dt[i]["MaintenanceTime"] + "</td>");
                    var $td2 = $("<td>" + dt[i]["MDeviceName"] + "</td>");
                    var $td3 = $("<td>" + dt[i]["MDetectionUnit"] + "</td>");
                    var $td4 = $("<td>" + dt[i]["MTestingPersonnel"] + "</td>");
                    var $td5 = $("<td>" + dt[i]["MAccompanyingOfficials"] + "</td>");
                    var $td7 = $("<td> <a href='/WhuWxiu/Edit/" + dt[i]["MIDs"] + "'>修改</a></td>")
                 
                    $tr.append($td1, $td2, $td3, $td4, $td5, $td7);
                    $("#ListArea").append($tr);

                }
            }


            //模糊查询
            $("#Button1").click(function () {
                names = $("#names").val();
                Mshow();//加载模糊查询
            })

            //加载模糊查询
            function Mshow() {
                $.ajax({
                    url: "/WhuWxiu/Index2",
                    type: "post",
                    data: "currentPage=" + currentPage + "&names=" + names,
                    success: function (msg) {
                        var dts = eval("(" + msg + ")");
                        var dt = dts["dt"];
                        fileTable(dt);
                        var rows = dts["rows"];
                        pages = dts["pages"];
                        $("#leftPage").html("共有" + rows + "条记录，当前第" + currentPage + "/" + pages + "页");
                    }
                })
            }

            //首页
            $("#first").click(function () {
                currentPage = 1;
                if (names != null) {
                    Mshow()
                } else {
                    show();
                }
            })

            //上一页
            $("#prev").click(function () {
                if (currentPage > 1) {
                    currentPage--;
                }
                if (names != null) {
                    Mshow()
                } else {
                    show();
                }
            })

            //下一页
            $("#next").click(function () {
                if (currentPage < pages) {
                    currentPage++;
                }

                if (names != null) {
                    Mshow()
                } else {
                    show();
                }
            })

            //尾页
            $("#last").click(function () {
                currentPage = pages;
                if (names != null) {
                    Mshow()
                } else {
                    show();
                }
            })
        })
    </script>

</head>
<body>
    <h2 align="center"> 视频会议测试及开会记录 </h2>
    <div id="wh">
        <a href="#" id="wh">设备维护</a>
        <a href="#" id="wx">设备维修</a>
    </div>
    <div>

        维护设备名称：
        <input id="names" type="text" Width="240" />
        &nbsp;
        <input id="Button1" type="button" value="查 询" Class="btn1" />
        &nbsp;
        <input id="btn_clear" type="reset" value="清 空" Class="btn1" />

        &nbsp;
        <input id="btn_add" type="button" value="添 加" Class="btn1" />
    </div>

    <table width="100%" id="ListArea" border="0" class="t1" align="center" cellpadding="0"
           cellspacing="0">
        <tr id="head">
            <td>日期</td>
            <td>维护设备名称</td>
            <td>负责检测单位</td>
            <td>检测人员</td>
            <td>陪同人员</td>
            <td>操作</td>
        </tr>
    </table>
    <div id="pageDiv">
        <div id="leftPage" style="color:#3C8ABC;padding-top:10px"></div>
        <div id="rightPage" style="float:right;position:relative;bottom:20px;">
            <input type="button" value="首页" OnClick="btn_select_Click" Class="btn1" id="first" />&nbsp;&nbsp;
            <input type="button" value="上一页" Class="btn1" id="prev" />&nbsp;&nbsp;
            <input type="button" value="下一页" Class="btn1" id="next" />&nbsp;&nbsp;
            <input type="button" value="尾页" Class="btn1" id="last" />&nbsp;&nbsp;
        </div>
    </div>

</body>
</html>
