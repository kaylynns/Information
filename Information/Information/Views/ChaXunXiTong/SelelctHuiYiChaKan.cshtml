@model Entity.info_Meeting
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>视频会议测试及开会记录</title>
    <link href="~/css/css.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.2.min.js"></script>

    <script src="~/DatePicker/WdatePicker.js"></script>
    <style type="text/css">
        #kh textarea {
            margin-top: 5px;
        }

        input, textarea {
            font-size: 15px;
            border: none;
            background-color: transparent;
        }
    </style>
    <script type="text/javascript">
        $(document).on("click", ".sj input", function () {
            WdatePicker({ readOnly: true, dateFmt: 'yyyy-MM-dd' });
        })

    </script>

</head>
<body>
    <h2 align="center" id="mid"> 视频会议测试及开会记录</h2>

    <table cellspacing="0" cellpadding="7" align="center" border="1" style="border-collapse: collapse; margin-bottom:20px"
           bordercolor="#6c9ec1">
        <tr>
            <td align="center">  会议名称：</td>

            <td align="left" colspan="3">
                @Html.HiddenFor(model => model.MID)
                @Html.EditorFor(model => model.MName)

            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                编号
            </td>
            <td align="center">
                内容
            </td>
            <td align="center">
                结果
            </td>
            <td align="center">
                备注
            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px" colspan="4">
                视频测试
            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                1
            </td>
            <td align="left">
                开机测试时间
            </td>
            <td align="left" class="sj">
                @Html.EditorFor(model => model.Mstart)
            </td>
            <td align="center">
                测试备注
            </td>

        </tr>
        <tr>
            <td align="center" style="height: 20px">
                2
            </td>
            <td align="left">
                本地音视频情况
            </td>
            <td align="left">
                @Html.EditorFor(model => model.MAudioSituation)
            </td>
            <td align="left" rowspan="6" class="dh">
                @Html.TextAreaFor(model => model.MNote, new { rows = "10", cols = "20" })

            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                3
            </td>
            <td align="left">
                上下级音视频测试
            </td>
            <td align="left">
                @Html.EditorFor(model => model.MText)
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                4
            </td>
            <td align="left">
                是否有发言
            </td>
            <td align="left">
                @Html.EditorFor(model => model.Mspeak)

            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                5
            </td>
            <td align="left">
                会议室卫生情况
            </td>
            <td align="left">
                @Html.EditorFor(model => model.Mhealth)
            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                6
            </td>
            <td align="left">
                测试完成时间
            </td>
            <td align="left" class="sj">
                @Html.EditorFor(model => model.MOwer)

            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px" colspan="4">
                正式开会
            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                1
            </td>
            <td align="left">
                会议召开时间
            </td>
            <td align="left" class="sj">
                @Html.EditorFor(model => model.MOpenTime)
            </td>
            <td align="center">
                开会备注
            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                2
            </td>
            <td align="left">
                会场音视频情况
            </td>
            <td align="left">
                @Html.EditorFor(model => model.MConference)
            </td>
            <td align="left" rowspan="3" id="kh">
                @Html.TextAreaFor(model => model.MComments, new { rows = "10", cols = "20" })@*开会备注*@
            </td>
        </tr>
       
        <tr>
            <td align="center" style="height: 20px">
                3
            </td>
            <td align="left">
                会议结束时间
            </td>
            <td align="left" class="sj">
                @Html.EditorFor(model => model.MOverTime)

            </td>
        </tr>
        <tr>
            <td align="center" style="height: 20px">
                4
            </td>
            <td align="left">
                关闭设备
            </td>
            <td align="left">
                @Html.EditorFor(model => model.closeDevice)
            </td>
        </tr>
      
        <tr>
            <td align="center" colspan="4" height="26">
                <input ID="btn_back" type="button" value="返 回" class="btn1" onclick="window.location.href = '/ChaXunXiTong/HuiYiChaXun'" />
                <br />
            </td>
        </tr>
    </table>

</body>
</html>